{
    "name": "framer-motion--monorepo",
    "version": "0.0.0",
    "private": true,
    "author": "Framer",
    "license": "MIT",
    "workspaces": [
        "packages/*",
        "dev"
    ],
    "scripts": {
        "start-dev-server": "cd dev && yarn start"
    },
    "turbo": {
        "npmClient": "yarn",
        "baseBranch": "origin/main",
        "pipeline": {
            "build": {
                "dependsOn": [
                    "^build"
                ],
                "outputs": [
                    "dist/**"
                ]
            },
            "lint": {
                "outputs": []
            },
            "test": {
                "dependsOn": [
                    "build"
                ],
                "outputs": []
            },
            "deploy": {
                "dependsOn": [
                    "build",
                    "test",
                    "lint"
                ]
            },
            "measure": {
                "dependsOn": [
                    "build"
                ]
            },
            "publish": {
                "dependsOn": [
                    "build",
                    "test",
                    "lint"
                ]
            },
            "dev": {
                "dependsOn": [
                    "build"
                ],
                "cache": false
            }
        }
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "jest": "^27.4.7",
        "lerna": "^4.0.0",
        "prettier": "^2.5.1",
        "turbo": "^1.0.25"
    }
}
